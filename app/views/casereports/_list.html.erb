<table class="table mb-5">
    <thead>
        <tr>
            <th class="w-130">発生日時</th>
            <th>利用者名</th>
            <th>事例名</th>
            <th class="w-130"></th>
            <th class="w-110">
                <%= link_to "新規登録", new_casereport_path,  class: "btn btn-primary" %>
            </th>
        </tr>
    </thead>
    <tbody>
        <% @casereport.each do |item| %>
            <tr>
                <td class="pt-1"><%= item.occurrence_date.strftime('%Y/%m/%d') %></td>
                <td class="pt-1"><%= item.name %></td>
                <td class="pt-1"><%= item.case_name %></td>
                <td>
                    <%= link_to "詳細・編集", edit_casereport_path(item), class: "btn btn-success" %>
                </td>
                <td>
                    <%= link_to "削除",
                        casereport_path(item),
                        data: {
                            turbo_method: :delete,
                            turbo_confirm: "本当に削除しますか？"
                        },
                        class: "btn btn-danger delete-btn"
                    %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
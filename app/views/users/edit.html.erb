<h2 class="title">アカウント情報編集</h2>
<%= form_with model: @user, class: "account-form" do |f| %>
    <%= render "users/error" %>
    <div class="form-group mb-4">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group mb-4">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="mb-5">
        <%= f.submit "更新", class: "btn btn-primary" %>
        <%= link_to "戻る", useroffacilitys_path, class: "btn btn-secondary" %>
    </div>
<% end %>

<div class="account-form">
    <%= link_to "退会",
        user_path(@user.id),
        data: {
            turbo_method: :delete,
            turbo_confirm: "退会すると全てのデータが削除されます。本当に退会しますか？"
        },
        class: "btn btn-danger",
        style: "width: 100%;"
    %>
</div>